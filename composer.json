{
    "name": "f-oris/easy-sdk-installer",
    "description": "Easy sdk project installer",
    "license": "MIT",
    "authors": [
        {
            "name": "F.oris",
            "email": "us@f-oris.me"
        }
    ],
    "require": {
        "php": ">=5.5",
        "ext-zip": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "symfony/process": "^3.3|^3.4|^4.0|^5.0",
        "f-oris/easy-console": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "symfony/filesystem": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Foris\\Easy\\Sdk\\Installer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foris\\Easy\\Sdk\\Tests\\Installer\\": "tests/"
        }
    },
    "bin": [
        "bin/easy-sdk"
    ],
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
