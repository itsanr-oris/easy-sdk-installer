{
    "name": "f-oris/easy-sdk-installer",
    "description": "Easy sdk project installer",
    "license": "MIT",
    "authors": [
        {
            "name": "F.oris",
            "email": "us@f-oris.me"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "ext-zip": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "symfony/finder": "^3.4.35 || ^4.4 || ^5.0",
        "symfony/process": "^3.4.35 || ^4.4 || ^5.0",
        "f-oris/easy-console": "^1.0",
        "symfony/filesystem": "^4.0|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "mockery/mockery": "^1.2",
        "fzaninotto/faker": "^1.8",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Foris\\Easy\\Sdk\\Installer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foris\\Easy\\Sdk\\Tests\\Installer\\": "tests/"
        }
    },
    "bin": [
        "bin/easy-sdk"
    ],
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
